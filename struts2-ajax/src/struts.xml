<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="default" namespace="/" extends="struts-default">
    	<!-- 配置默认的拦截器 -->
    	<default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>
    
    	<action name="emp-*" class="com.djh.michael.demo.EmployeeAction" method="{1}">
    		<result name="{1}">/WEB-INF/pages/emp-{1}.jsp</result>
    		<result name="success" type="redirectAction">emp-list</result>
    	</action>
    	
 	    <action name="province-*" class="com.djh.michael.demo.ProvinceAction" method="{1}">
    		<result name="{1}">/WEB-INF/pages/province-{1}.jsp</result>
    		<result name="success" type="redirectAction">province-list</result>
    	</action>
    </package>
</struts>
